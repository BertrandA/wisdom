<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>raspberry</id>

    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <!-- Core distribution -->
            <outputDirectory>.</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>*:chameleon-core:zip</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <!-- Runtime -->
            <outputDirectory>runtime</outputDirectory>

            <includes>
                <include>*:guava</include>
                <include>*:commons-io</include>

                <!-- Jetty server -->
                <include>*:org.apache.felix.http.bundle</include>

                <!-- Web Console -->
                <include>*:org.apache.felix.webconsole*</include>
                <include>*:org.apache.felix.ipojo.webconsole</include>
                <include>*:org.apache.felix.metatype</include>
                <include>*:commons-fileupload</include>
                <include>*:org.ow2.chameleon.commons.json</include>
                <!--<include>*:org.apache.felix.eventadmin</include>-->
                <!--<include>com.fasterxml.jackson.core:*</include>-->

                <!-- all wisdom components -->
                <include>${project.groupId}:*:jar</include>
            </includes>
        </dependencySet>

        <!--<dependencySet>-->
            <!--&lt;!&ndash; Application &ndash;&gt;-->
            <!--<outputDirectory>application</outputDirectory>-->
        <!--</dependencySet>-->
    </dependencySets>

    <fileSets>
        <fileSet>
            <!-- configuration -->
            <outputDirectory>conf</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
            <directory>src/main/resources/configuration</directory>
        </fileSet>

        <fileSet>
            <!-- application -->
            <outputDirectory>application</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
            <directory>src/main/resources/application</directory>
        </fileSet>
    </fileSets>

</assembly>